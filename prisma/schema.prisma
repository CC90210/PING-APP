// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================
// USER & AUTH (NextAuth.js v5 compatible)
// ============================================================

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String?
  passwordHash    String?
  avatarUrl       String?
  timezone        String    @default("America/Toronto")

  // Settings
  dailyDigest     Boolean   @default(true)
  digestTime      String    @default("08:00")
  maxNudgesPerDay Int       @default(5)
  quietHoursStart String    @default("22:00")
  quietHoursEnd   String    @default("08:00")

  // Onboarding
  onboardingComplete Boolean @default(false)

  // Subscription
  plan            Plan      @default(FREE)

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  contacts        Contact[]
  interactions    Interaction[]
  nudges          Nudge[]
  accounts        Account[]
  sessions        Session[]
  insights        RelationshipInsight[]
  importJobs      ImportJob[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  access_token      String? @db.Text
  refresh_token     String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

enum Plan {
  FREE
  PRO
  BUSINESS
}

// ============================================================
// CONTACTS
// ============================================================

model Contact {
  id                    String        @id @default(cuid())
  userId                String

  // Core info
  name                  String
  phone                 String?
  email                 String?
  avatarUrl             String?
  notes                 String?       @db.Text

  // Categorization
  category              ContactCategory @default(FRIEND)
  priority              Int           @default(0)
  tags                  String[]

  // Warmth engine
  desiredFrequencyDays  Int           @default(14)
  warmthScore           Float         @default(50)
  warmthStatus          WarmthStatus  @default(YELLOW)
  lastInteractionAt     DateTime?
  lastInteractionChannel String?
  lastOutboundAt        DateTime?
  lastInboundAt         DateTime?

  // Enrichment
  company               String?
  role                  String?
  linkedinUrl           String?
  birthday              DateTime?
  location              String?

  // Platform identifiers
  linkedPlatforms       Json          @default("{}")

  // Metadata
  isArchived            Boolean       @default(false)
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  // Relations
  user                  User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  interactions          Interaction[]
  nudges                Nudge[]
  patterns              CommunicationPattern?
  insights              RelationshipInsight[]

  @@index([userId, warmthStatus])
  @@index([userId, warmthScore])
  @@index([userId, category])
  @@map("contacts")
}

enum ContactCategory {
  FAMILY
  FRIEND
  CLIENT
  COLLEAGUE
  MENTOR
  ACQUAINTANCE
  OTHER
}

enum WarmthStatus {
  GREEN
  YELLOW
  RED
  DEAD
}

// ============================================================
// INTERACTIONS
// ============================================================

model Interaction {
  id            String          @id @default(cuid())
  userId        String
  contactId     String

  type          InteractionType
  channel       String?
  direction     Direction       @default(OUTBOUND)

  summary       String?         @db.Text
  topics        String[]
  sentiment     String?

  occurredAt    DateTime        @default(now())
  createdAt     DateTime        @default(now())

  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  contact       Contact         @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([contactId, occurredAt(sort: Desc)])
  @@index([userId, occurredAt(sort: Desc)])
  @@map("interactions")
}

enum InteractionType {
  MESSAGE
  CALL
  VIDEO_CALL
  EMAIL
  VOICE_NOTE
  IN_PERSON
  SOCIAL_MEDIA
  MANUAL
}

enum Direction {
  INBOUND
  OUTBOUND
  MUTUAL
}

// ============================================================
// NUDGES
// ============================================================

model Nudge {
  id              String      @id @default(cuid())
  userId          String
  contactId       String

  type            NudgeType
  status          NudgeStatus @default(PENDING)

  title           String
  body            String?
  suggestedAction String?
  urgency         Int         @default(1)

  scheduledFor    DateTime    @default(now())
  snoozedUntil    DateTime?

  actionedAt      DateTime?
  dismissedAt     DateTime?
  createdAt       DateTime    @default(now())

  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  contact         Contact     @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([userId, status, scheduledFor])
  @@map("nudges")
}

enum NudgeType {
  WARMTH_DECAY
  BIRTHDAY
  RE_ENGAGE
  FOLLOW_UP
  RECIPROCITY
  PREDICTED_DECAY
  COACHING
}

enum NudgeStatus {
  PENDING
  SENT
  ACTIONED
  DISMISSED
  SNOOZED
}

// ============================================================
// AI INTELLIGENCE
// ============================================================

model CommunicationPattern {
  id                  String    @id @default(cuid())
  contactId           String    @unique

  preferredDay        Int?
  preferredHour       Int?
  preferredChannel    String?

  avgResponseTimeHrs  Float?
  initiationRatio     Float?
  frequencyTrend      String?

  lastAnalyzedAt      DateTime?
  rawPatternData      Json?

  updatedAt           DateTime  @updatedAt

  contact             Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@map("communication_patterns")
}

model RelationshipInsight {
  id            String    @id @default(cuid())
  userId        String
  contactId     String?

  type          String
  title         String
  body          String    @db.Text

  actionable    Boolean   @default(false)
  actionText    String?

  confidence    Float     @default(0.5)
  isRead        Boolean   @default(false)
  validUntil    DateTime?

  createdAt     DateTime  @default(now())

  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  contact       Contact?  @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([userId, isRead, createdAt(sort: Desc)])
  @@map("relationship_insights")
}

// ============================================================
// BACKGROUND JOBS (replaces Redis + BullMQ)
// ============================================================

model CronJobLog {
  id          String    @id @default(cuid())
  jobName     String
  status      String
  result      Json?
  error       String?   @db.Text
  startedAt   DateTime  @default(now())
  completedAt DateTime?

  @@index([jobName, startedAt(sort: Desc)])
  @@map("cron_job_logs")
}

// ============================================================
// CONTACT IMPORT
// ============================================================

model ImportJob {
  id          String    @id @default(cuid())
  userId      String
  source      String
  status      String    @default("pending")

  totalFound  Int       @default(0)
  imported    Int       @default(0)
  merged      Int       @default(0)
  skipped     Int       @default(0)

  error       String?   @db.Text

  createdAt   DateTime  @default(now())
  completedAt DateTime?

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("import_jobs")
}
